<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello World\n</text>
<text>你好\n</text>

<!-- 2.selectable：true -->
<!-- 默认情况下的text中的文本长安是不能选择中的 -->
<text selectable="{{true}}">Hello Coderwhy\n</text>

<text selectable>Hello Coderwhy\n</text>

<!-- 3.space:决定文本空格的大小 -->
<text>Hello Coderwhy\n</text>
<text space="nbsp">Hello Coderwhy\n</text>
<!-- emsp:一个中文字符的大小 -->
<text space="emsp">Hello Coderwhy\n</text>
<!-- ensp:半个中文字符的大小 -->
<text space="ensp">Hello Coderwhy\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text decode>5 &gt; 3</text>